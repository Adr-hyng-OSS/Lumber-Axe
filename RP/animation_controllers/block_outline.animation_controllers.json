{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.block_outline.controller": {
			"states": {
				"default": {
          "on_entry": ["variable.trunk_size = q.property('yn:trunk_size');"],
          "on_exit": ["variable.trunk_size = q.property('yn:trunk_size');"],
					"transitions": [
						{"show_destroy_block": "q.has_property('yn:trunk_size')"}
					],
					"blend_via_shortest_path": true
				},
				"show_destroy_block": {
          "on_entry": ["variable.trunk_size = q.property('yn:trunk_size');"],
          "on_exit": ["variable.trunk_size = q.property('yn:trunk_size');"],
					"particle_effects": [
						{
							"effect": "destroy_block",
							"locator": "destroy_block"
						}
					],
          "animations": [
            "show_destroy_block_anim"
          ]
				}
			}
		}
	}
}