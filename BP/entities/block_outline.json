{
	"format_version": "1.18.0",
	
	"minecraft:entity": {
		"description": {
			"identifier": "yn:block_outline",
			"runtime_identifier": "minecraft:armor_stand",
			"is_spawnable": true,
			"is_summonable": true,
			"properties": {
        "yn:stay_persistent": {
          "type": "bool",
          "client_sync": true,
          "default": false
        }
      }
		},
		
		"components": {
			"minecraft:collision_box": {
				"width": 0,
				"height": 0
			},
			"minecraft:health": {
        "value": 1,
        "max": 1
      },
      "minecraft:physics": {
        "has_collision": true,
        "has_gravity": false
      },
			"minecraft:damage_sensor": {
        "triggers": [
					{
						"cause": "all",
						"deals_damage": false
					}
				]
      },
      "minecraft:knockback_resistance": {
        "value": 100
      },
      "minecraft:pushable": {
        "is_pushable": false,
        "is_pushable_by_piston": false
      }
		},
		"component_groups": {
			"active_outline": {
				"minecraft:variant": {
					"value": 1
				}
			},
			"inactive_outline": {
				"minecraft:variant": {
					"value": 0
				}
			},
			"default_outline": {
				"minecraft:mark_variant": {
					"value": 0
				}
			},
			"choppable_tree": {
				"minecraft:mark_variant": {
					"value": 1
				}
			},
			"unchoppable_tree": {
				"minecraft:mark_variant": {
					"value": 2
				}
			},
			"despawn": {
        "minecraft:instant_despawn": {}
      },
			"not_persistent": {
				"minecraft:timer": {
					"looping": false,
					"time": 30,
					"time_down_event": {
						"event": "despawn"
					}
				},
				"minecraft:environment_sensor": {
					"triggers": [
						{
							"event": "despawn",
							"filters": [
								{
									"all_of": [
										{
											"test": "in_block",
											"value": "minecraft:air"
										}
										// {
										// 	"test": "inactivity_timer",
										// 	"value": 1
										// }
									]
								}
							]
						},
						{
							"event": "stay_persistent",
							"filters": {
								"test": "bool_property",
								"domain": "yn:stay_persistent",
								"value": true
							}
						}
					]
				}
			},
			"stay_persistent": {
				"minecraft:environment_sensor": {
					"triggers": [
						{
							"event": "despawn",
							"filters": {
								"test": "in_block",
								"value": "minecraft:air"
							}
						},
						{
							"event": "not_persistent",
							"filters": {
								"test": "bool_property",
								"domain": "yn:stay_persistent",
								"value": false
							}
						}
					]
				}
			}
		},
		
		"events": {
			"minecraft:entity_spawned": {
				"trigger": "not_persistent",
				"remove": { "component_groups": [ "active_outline" ] },
				"add": { "component_groups": [ "inactive_outline", "default_outline" ] }
			},
			"despawn": {
				"add": { "component_groups": [ "despawn" ] }
      },
			"is_tree_choppable": {
				"remove": { "component_groups": [ "unchoppable_tree", "default_outline" ] },
				"add": { "component_groups": [ "choppable_tree" ] }
			},
			"unchoppable_tree": {
				"remove": { "component_groups": [ "choppable_tree", "default_outline" ] },
				"add": { "component_groups": [ "unchoppable_tree" ] }
			},
			"go_default_outline": {
				"remove": { "component_groups": [ "choppable_tree", "unchoppable_tree" ] },
				"add": { "component_groups": [ "default_outline" ] }
			},
			"active_outline": {
				"remove": { "component_groups": [ "inactive_outline" ] },
				"add": { "component_groups": [ "active_outline" ] }
      },
			"inactive_outline": {
				"remove": { "component_groups": [ "active_outline" ] },
				"add": { "component_groups": [ "inactive_outline" ] }
      },
			"not_persistent": {
				"remove": { "component_groups": [ "stay_persistent" ]},
				"add": { "component_groups": [ "not_persistent" ]}
			},
			"stay_persistent": {
				"remove": { "component_groups": [ "not_persistent" ]},
				"add": { "component_groups": [ "stay_persistent" ]}
			}
		}
	}
}